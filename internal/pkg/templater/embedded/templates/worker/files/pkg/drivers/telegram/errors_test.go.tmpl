package telegram

import (
	"errors"
	"testing"
)

func TestIsBotBlockedError(t *testing.T) {
	tests := []struct {
		name string
		err  error
		want bool
	}{
		{
			name: "nil error",
			err:  nil,
			want: false,
		},
		{
			name: "bot was blocked by user",
			err:  errors.New("Forbidden: bot was blocked by the user"),
			want: true,
		},
		{
			name: "user is deactivated",
			err:  errors.New("Forbidden: user is deactivated"),
			want: true,
		},
		{
			name: "bot can't initiate conversation",
			err:  errors.New("Forbidden: bot can't initiate conversation with a user"),
			want: true,
		},
		{
			name: "unrelated error",
			err:  errors.New("Internal server error"),
			want: false,
		},
		{
			name: "partial match - blocked",
			err:  errors.New("Error: bot was blocked by the user - chat not found"),
			want: true,
		},
	}

	for _, tt := range tests {
		t.Run(tt.name, func(t *testing.T) {
			got := IsBotBlockedError(tt.err)

			if got != tt.want {
				t.Errorf("IsBotBlockedError() = %v, want %v", got, tt.want)
			}
		})
	}
}

