[Unit]
Description={{ .ProjectName }} {{ .Application.Name }} service
After=network.target

[Service]
Type=simple
User={{ .ProjectName }}
ExecStart={{ .Artifacts.Packaging.InstallDir }}/{{ .Application.Name }}
Environment="ONLINECONF_DIR={{ .Artifacts.Packaging.ConfigDir }}/{{ .Application.Name }}"
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
